@model TheatreBooking.Models.Sjediste

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sjediste</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SjedisteID" />
            <div class="form-group">
                <label asp-for="BrojSjedista" class="control-label"></label>
                <input asp-for="BrojSjedista" class="form-control" />
                <span asp-validation-for="BrojSjedista" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Slobodno" /> @Html.DisplayNameFor(model => model.Slobodno)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RezervacijaID" class="control-label"></label>
                <select asp-for="RezervacijaID" class="form-control" asp-items="ViewBag.RezervacijaID"></select>
                <span asp-validation-for="RezervacijaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
