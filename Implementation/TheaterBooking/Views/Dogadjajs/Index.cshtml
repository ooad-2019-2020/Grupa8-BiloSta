@model IEnumerable<TheatreBooking.Models.Dogadjaj>

@{
    ViewData["Title"] = "Index";
}

<h1>Događaji</h1>

<p>
      @if (User.IsInRole("Administrator")) 
     {
    <a asp-action="Create">Kreiraj novi događaj</a>
     }

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slika)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slika)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.DogadjajID">Edit</a>  
                } 

                <a asp-action="Details" asp-route-id="@item.DogadjajID">Details</a> |
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Delete" asp-route-id="@item.DogadjajID">Delete</a>
                }
                </td>
        </tr>
}
    </tbody>
</table>
